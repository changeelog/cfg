{
  "Animation": {
    "prefix": "ani",
    "description": "Set animation",
    "body": [
      "animation: ${1:name} ${2:1s} ${3|linear,ease,ease-in,ease-out,ease-in-out|};"
    ]
  },
  "Aspect Ratio": {
    "prefix": "ar",
    "description": "Set an aspect ratio for an element",
    "body": [
      "aspect-ratio: ${1:16} / ${2:9};"
    ]
  },
  "Background": {
    "prefix": "bg",
    "description": "Set background",
    "body": [
      "background: ${1:#fff};"
    ]
  },
  "Border": {
    "prefix": "bor",
    "description": "Set border",
    "body": [
      "border: ${1:1px} ${2|solid,dashed,dotted|} ${3:#000};"
    ]
  },
  "Box Shadow": {
    "prefix": "bxs",
    "description": "Add a box shadow",
    "body": [
      "box-shadow: 0 ${1:4px} ${2:6px} rgba(0, 0, 0, ${3:0.1});"
    ]
  },
  "CSS Reset": {
    "prefix": "reset",
    "description": "Basic CSS reset",
    "body": [
      "* {",
      "  margin: 0;",
      "  padding: 0;",
      "  box-sizing: border-box;",
      "}"
    ]
  },
  "Display Flex": {
    "prefix": "df",
    "description": "Set display to flex",
    "body": [
      "display: flex;"
    ]
  },
  "Flex Align Items": {
    "prefix": "ai",
    "description": "Set align-items for flexbox",
    "body": [
      "align-items: ${1|flex-start,center,flex-end,stretch,baseline|};"
    ]
  },
  "Flexbox Container": {
    "prefix": "fbox",
    "description": "Create a flexbox container",
    "body": [
      "display: flex;",
      "flex-direction: ${1|row,column,row-reverse,column-reverse|};",
      "justify-content: ${2|flex-start,flex-end,center,space-between,space-around|};",
      "align-items: ${3|stretch,flex-start,flex-end,center|};"
    ]
  },
  "Font Weight": {
    "prefix": "fw",
    "description": "Set font-weight",
    "body": [
      "font-weight: ${1|normal,bold,100,200,300,400,500,600,700,800,900|};"
    ]
  },
  "Grid Container": {
    "prefix": "gbox",
    "description": "Create a grid container",
    "body": [
      "display: grid;",
      "grid-template-columns: repeat(${1:3}, 1fr);",
      "gap: ${2:1rem};"
    ]
  },
  "Height": {
    "prefix": "hei",
    "description": "Set height",
    "body": [
      "height: ${1:auto};"
    ]
  },
  "Justify Content": {
    "prefix": "jc",
    "description": "Set justify-content for flexbox",
    "body": [
      "justify-content: ${1|flex-start,flex-end,center,space-between,space-around|};"
    ]
  },
  "Margin": {
    "prefix": "mar",
    "description": "Set margin",
    "body": [
      "margin: ${1:0};"
    ]
  },
  "Media Query": {
    "prefix": "mq",
    "description": "Add a media query",
    "body": [
      "@media (min-width: ${1:768px}) {",
      "  $2",
      "}"
    ]
  },
  "Opacity": {
    "prefix": "op",
    "description": "Set opacity",
    "body": [
      "opacity: ${1:1};"
    ]
  },
  "Padding": {
    "prefix": "pad",
    "description": "Set padding",
    "body": [
      "padding: ${1:0};"
    ]
  },
  "Position Absolute": {
    "prefix": "posa",
    "description": "Set position to absolute",
    "body": [
      "position: absolute;"
    ]
  },
  "Position Relative": {
    "prefix": "posr",
    "description": "Set position to relative",
    "body": [
      "position: relative;"
    ]
  },
  "Responsive Container": {
    "prefix": "rcont",
    "description": "Create a responsive container",
    "body": [
      "width: 100%;",
      "max-width: ${1:1200px};",
      "margin: 0 auto;",
      "padding: 0 ${2:15px};"
    ]
  },
  "Responsive Font Size": {
    "prefix": "rfont",
    "description": "Create a responsive font size using clamp()",
    "body": [
      "font-size: clamp(${1:1rem}, ${2:5vw}, ${3:2rem});"
    ]
  },
  "Text Align": {
    "prefix": "ta",
    "description": "Set text-align",
    "body": [
      "text-align: ${1|left,center,right,justify|};"
    ]
  },
  "Transition": {
    "prefix": "tran",
    "description": "Set transition",
    "body": [
      "transition: ${1:all} ${2:0.3s} ${3|ease,linear,ease-in,ease-out,ease-in-out|};"
    ]
  },
  "Truncate Text": {
    "prefix": "trunc",
    "description": "Truncate text with ellipsis",
    "body": [
      "white-space: nowrap;",
      "overflow: hidden;",
      "text-overflow: ellipsis;"
    ]
  },
  "Width": {
    "prefix": "wid",
    "description": "Set width",
    "body": [
      "width: ${1:100%};"
    ]
  },
  "Z-Index": {
    "prefix": "zi",
    "description": "Set z-index",
    "body": [
      "z-index: ${1:1};"
    ]
  }
}