{
  "For Loop": {
    "prefix": "psfl",
    "description": "For loop",
    "body": [
      "for (\\$${1:i} = 0; \\$${1:i} -lt ${2:count}; \\$${1:i}++) {",
      "    ${0:# Code}",
      "}"
    ]
  },
  "Foreach Loop": {
    "prefix": "psfe",
    "description": "Foreach loop",
    "body": [
      "foreach (\\$${1:item} in \\$${2:collection}) {",
      "    ${0:# Code}",
      "}"
    ]
  },
  "Function": {
    "prefix": "psfn",
    "description": "Create a new function",
    "body": [
      "function ${1:FunctionName} {",
      "    [CmdletBinding()]",
      "    param (",
      "        [Parameter(Mandatory=\\$true)]",
      "        [${2:type}]\\$${3:paramName}",
      "    )",
      "    ",
      "    ${0:# Function body}",
      "}"
    ]
  },
  "Get-Content": {
    "prefix": "psgc",
    "description": "Read content from a file",
    "body": [
      "\\$${1:content} = Get-Content -Path \"${2:filePath}\""
    ]
  },
  "If Statement": {
    "prefix": "psis",
    "description": "If statement",
    "body": [
      "if (${1:condition}) {",
      "    ${0:# Code}",
      "}"
    ]
  },
  "If-Else Statement": {
    "prefix": "psie",
    "description": "If-Else statement",
    "body": [
      "if (${1:condition}) {",
      "    ${2:# Code}",
      "} else {",
      "    ${0:# Code}",
      "}"
    ]
  },
  "Param Block": {
    "prefix": "pspb",
    "description": "Parameter block for functions or scripts",
    "body": [
      "param (",
      "    [Parameter(Mandatory=\\$true)]",
      "    [${1:type}]\\$${2:paramName}",
      ")"
    ]
  },
  "Set-Content": {
    "prefix": "pssc",
    "description": "Write content to a file",
    "body": [
      "Set-Content -Path \"${1:filePath}\" -Value \"${2:content}\""
    ]
  },
  "Switch Statement": {
    "prefix": "pssw",
    "description": "Switch statement",
    "body": [
      "switch (\\$${1:variable}) {",
      "    ${2:value1} { ${3:# Code} }",
      "    ${4:value2} { ${5:# Code} }",
      "    default { ${0:# Code} }",
      "}"
    ]
  },
  "Try-Catch": {
    "prefix": "pstc",
    "description": "Try-Catch block",
    "body": [
      "try {",
      "    ${1:# Code that may throw an exception}",
      "} catch {",
      "    ${0:# Error handling}",
      "}"
    ]
  },
  "While Loop": {
    "prefix": "pswl",
    "description": "While loop",
    "body": [
      "while (${1:condition}) {",
      "    ${0:# Code}",
      "}"
    ]
  },
  "Write-Host": {
    "prefix": "pswh",
    "description": "Write colored output to the console",
    "body": [
      "Write-Host \"${1:Message}\" -ForegroundColor ${2|Red,Green,Yellow,Blue,Magenta,Cyan,White|}"
    ]
  }
}